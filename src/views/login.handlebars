<section>

  <div class="login-box">
    <form action="login" method="post">
      <h2>Login</h2>
      <div class="input-box">
        <span class="icon">
          <ion-icon name="mail"></ion-icon>
        </span>
        <input type="email" required name="email" />
        <label for="">
          Email
        </label>
      </div>

      <div class="input-box">
        <span class="icon">
          <div class="icon__open">
            <ion-icon name="lock-open"></ion-icon>
          </div>
          <div class="icon__closed">
            <ion-icon name="lock-closed"></ion-icon>
          </div>
        </span>
        <input type="password" required name="password" id="password" />
        <label for="password">
          Password
        </label>
      </div>

      <div class="remember-forgot">
        <label>
          <input type="checkbox" />
          Remember me
        </label>
        <a href="http://localhost:8080/api/sessions/restorepassword">Forgot
          Password?</a>
      </div>

      <button class="button" type="submit">Login</button>

      <div class="github__container">
        <a class="github__button--a" href="/api/sessions/github">
          <button class="github__button" type="button">
            <ion-icon name="logo-github"></ion-icon>
            Github
          </button>
        </a>

      </div>

      <div class="register-link">
        <p>
          Don't have an account?
          <a href="http://localhost:8080/api/sessions/registrar">Register Now</a>
        </p>
      </div>

    </form>
  </div>
</section>

<div>
  {{#if error}}
    <p>
      Invalid login credentials. Please try again.
    </p>
  {{/if}}
</div>

<script src="/js/registrar.js"></script>
