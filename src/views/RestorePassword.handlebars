<section>
  <div class="login-box">

    <form action="restorepassword" method="post">

      <h2> reset password</h2>
      <div class="input-box">
        <span class="icon">
          <ion-icon name="mail"></ion-icon>
        </span>
        <input type="email" required name="email" />
        <label for="">
          Email
        </label>
      </div>

      <div class="input-box">
        <span class="icon">
          <div class="icon__open">
            <ion-icon name="lock-open"></ion-icon>
          </div>
          <div class="icon__closed">
            <ion-icon name="lock-closed"></ion-icon>
          </div>
        </span>
        <input type="password" required name="password" id="password" />
        <label for="password">
          Password
        </label>
      </div>
      <div class="input-box">
        <span class="icon">
          <ion-icon name="lock-closed"></ion-icon>
        </span>
        <input type="text" required name="password2" />

        <label for="">
          Repet Password
        </label>
      </div>

      <button type="submit">Reset Password</button>
    </form>

  </div>
</section>

